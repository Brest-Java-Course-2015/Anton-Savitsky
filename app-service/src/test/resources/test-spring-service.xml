<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath*:test-spring-db.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
               <value>classpath:database.properties</value>
                <value>classpath:dao.properties</value>
                <value>classpath:service.properties</value>
            </list>
        </property>
    </bean>

    <bean id="carDao" class="com.epam.brest.course2015.dao.CarDaoImpl"/>

    <bean id="producerDao" class="com.epam.brest.course2015.dao.ProducerDaoImpl"/>

    <bean id="carService" class="com.epam.brest.course2015.service.CarServiceImpl">
        <property name="carDao" ref="carDao"/>
    </bean>

    <bean id="producerService" class="com.epam.brest.course2015.service.ProducerServiceImpl">
        <property name="producerDao" ref="producerDao"/>
    </bean>

</beans>